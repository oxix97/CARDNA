<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="match_parent"
        tools:context=".ui.login.SignActivity">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_sign_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_logo"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="160dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_sign_title"
            android:text="CARDNA"
            style="@style/fragment_title_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_sign_logo"
            android:layout_marginTop="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_sign_title_about"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/white_2"
            app:layout_constraintTop_toBottomOf="@id/tv_sign_title"
            android:text="다양한 나를 펼치다, 카드나"
            android:textSize="14sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_sign_in"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingVertical="16dp"
            android:includeFontPadding="false"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/rectangle_sign_in_gradient_radius_10"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@id/btn_sign_up"
            android:layout_marginBottom="16dp"
            android:text="로그인"
            android:fontFamily="@font/pretendard_semibold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_sign_up"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/rectangle_sign_up_gradient_radius_10"
            android:textSize="20sp"
            android:layout_marginBottom="24dp"
            android:textColor="@color/white"
            android:text="가입하기"
            android:includeFontPadding="false"
            android:gravity="center"
            android:paddingVertical="16dp"
            android:fontFamily="@font/pretendard_semibold" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>