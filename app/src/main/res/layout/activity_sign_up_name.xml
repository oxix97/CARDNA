<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="match_parent"
        tools:context=".ui.login.SignUpNameActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_sign_up_name_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="이름을 알려주세요!"
            android:textColor="@color/white_1"
            android:layout_marginTop="80dp"
            style="@style/fragment_title_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_sign_up_name_about"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_sign_up_name_title"
            style="@style/detail_card_text_hint"
            android:text="원할한 서비스 이용을 위해 실명으로 적어주세요:)"
            android:layout_marginTop="4dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/cl_edit_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_sign_up_name_about"
            android:layout_marginTop="48dp"
            android:background="@drawable/bottom_edit_line_white_4"
            android:layout_marginStart="16dp">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/et_sign_up_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:hint="최대 3글자"
                android:ems="3"
                app:layout_constraintTop_toTopOf="parent"
                android:includeFontPadding="false"
                android:textColor="@color/white_1"
                android:textColorHint="@color/white_3"
                android:background="@null" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp"
            android:id="@+id/btn_sign_up_name_access"
            android:maxLength="3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/rectangle_sign_up_gray_radius_10"
            app:layout_constraintTop_toBottomOf="@id/cl_edit_name"
            android:layout_marginHorizontal="16dp"
            android:text="확인"
            android:textColor="@color/white_2"
            android:layout_marginTop="56dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>