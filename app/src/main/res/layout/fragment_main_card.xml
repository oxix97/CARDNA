<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.maincard.MainCardFragment">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:padding="20dp"
        android:background="@color/black"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_alarm"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="5dp"
            android:background="@drawable/ic_main_insight_checked" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_person"
            app:layout_constraintEnd_toStartOf="@id/btn_alarm"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="5dp"
            android:background="@drawable/ic_main_mypage_checked" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_share"
            android:layout_margin="5dp"
            app:layout_constraintEnd_toStartOf="@id/btn_person"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/ic_main_cardpack_checked" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_user_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_person"
            android:layout_marginTop="15dp"
            android:text="지우님은"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_user_tag"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_user_name"
            android:text="책 좋아!"
            android:textSize="22sp"
            android:textColor="@color/white" />

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            app:layout_constraintStart_toStartOf="@id/tv_user_tag"
            app:layout_constraintEnd_toEndOf="@id/tv_user_tag"
            app:layout_constraintTop_toBottomOf="@id/tv_user_tag"
            android:background="@color/representative_green" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_edit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_user_tag"
            android:layout_marginTop="10dp"
            android:background="@color/black"
            android:textColor="@color/white"
            android:text="⬇️ Edit" />

        <androidx.viewpager2.widget.ViewPager2
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/vp2_main_card_list"
            android:orientation="horizontal"
            android:background="@drawable/main_card_shape"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_edit"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@id/tv_page_number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_page_number"
            app:layout_constraintStart_toStartOf="@id/vp2_main_card_list"
            app:layout_constraintEnd_toEndOf="@id/vp2_main_card_list"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="1/7"
            android:layout_marginBottom="30dp"
            android:textColor="@color/representative_green" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>